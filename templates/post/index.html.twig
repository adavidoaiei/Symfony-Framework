{% extends 'base.html.twig' %}

{% block title %}Post List{% endblock %}

{% block body %}
    <h1>Post List</h1>

    <a href="{{ path('app_post_new') }}" class="btn btn-primary mb-3">Create New Post</a>

    <table class="table">
        <thead>
            <tr>
                <th>Title</th>                
                <th>Content</th>
                <th>Email</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.title }}</td>
                <td>{{ post.content }}</td>
                <td>{{ post.email }}</td>
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td class="d-flex gap-2">
                    <a href="{{ path('app_post_show', {'id': post.id}) }}" class="btn btn-sm btn-info">Show</a>
                    <a href="{{ path('app_post_edit', {'id': post.id}) }}" class="btn btn-sm btn-warning">Edit</a>
                    <form method="post" action="{{ path('app_post_delete', {'id': post.id}) }}" onsubmit="return confirm('Are you sure you want to delete this post?');" style="display: inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ post.id) }}">
                        <button class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">No posts found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
